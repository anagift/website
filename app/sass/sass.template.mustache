  @include xxxhdpi-sprite-size($sprite)


/*
  # 複数sprite出力 
  idも付与。sassにより上書きされる
  */

@mixin sprites($sprites)
  @each $sprite in $sprites
    $sprite-name: nth($sprite, 10)
    .#{$sprite-name}
      @include sprite($sprite)

{{/options.functions}}
