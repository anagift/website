  @include xxhdpi-sprite-size($sprite)


/*
  # xxxhdpiに対応
  4dpxに対応
  */

@mixin xxxhdpi-sprite-width($sprite)
  width: nth($sprite, 5) / 4

@mixin xxxhdpi-sprite-height($sprite)
